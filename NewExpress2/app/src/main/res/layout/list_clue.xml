<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/wirte"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding"
        android:orientation="horizontal"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/txt_message_lcl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现可疑人物，寄送物品既然不让打开，也不刘身份信息"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_marginsx"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txt_come_lcl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="陕西全峰快递有限公司"
                    android:layout_below="@+id/txt_name_three"
                    android:layout_weight="1"
                    android:textSize="@dimen/edit_text"
                    />

                <TextView
                    android:id="@+id/txt_date_lcl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三丰/2天前"
                    android:textSize="@dimen/edit_text"
                    />

            </LinearLayout>



        </RelativeLayout>

        <ImageView
            android:id="@+id/img_pic_lcl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pic_what"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>