<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/top_bg_color"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wirte"
        >

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/txt_name_total_lc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017-9-29"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                />

        <CheckBox
            android:id="@+id/img_pic_lc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            />


        <LinearLayout
            style="@style/horizontal_black_line_small"
            android:layout_below="@+id/txt_name_pq"
            />



    </LinearLayout>

</LinearLayout>
